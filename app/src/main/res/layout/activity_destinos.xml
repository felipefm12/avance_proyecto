<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_9"
    tools:context=".destinos">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="EMPRESA"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#4A4949"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="lblDestino"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="COORDENADAS"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#4A4949"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblCoordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="lblCoordenadas"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="INFORMACION"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#4A4949"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lblInfo"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/ima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver a Lista"
                android:textColor="@color/white"
                android:background="#4A4949"
                android:layout_marginTop="-50sp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>